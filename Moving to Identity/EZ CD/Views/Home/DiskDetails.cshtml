@model EZ_CD.Models.Disk



@{

    ViewData["Title"] = Model.name;
    Layout = "_Layout";
}



<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="img/favicon.png" type="image/png">
    <title>MeetMe Personal</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/DiskDetails/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/DiskDetails/vendors/linericon/style.css">
    <link rel="stylesheet" href="~/css/DiskDetails/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/DiskDetails/vendors/owl-carousel/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/DiskDetails/vendors/lightbox/simpleLightbox.css">
    <link rel="stylesheet" href="~/css/DiskDetails/vendors/nice-select/css/nice-select.css">
    <link rel="stylesheet" href="~/css/DiskDetails/vendors/animate-css/animate.css">
    <link rel="stylesheet" href="~/css/DiskDetails/vendors/popup/magnific-popup.css">
    <link rel="stylesheet" href="~/css/DiskDetails/vendors/flaticon/flaticon.css">
    <!-- main css -->
    <link rel="stylesheet" href="~/css/DiskDetails/css/style.css">
    <link rel="stylesheet" href="~/css/DiskDetails/css/responsive.css">
    <style>
        img.sticky {
            position: sticky;
            top: 0;
            object-fit: contain;
            width: 700px;
        }
    </style>
</head>




<body>

    <section class="home_banner_area">
        <div class="container box_1620">
            <div class="banner_inner d-flex align-items-center">
                <div class="banner_content">
                    <div class="media">
                        
                            <img class="sticky" src=@Model.imagePath alt=@Model.name>
                        
                        <div class="media-body" style="padding-left:50px">
                            <h3>@Model.name</h3>
                            <div class="personal_text">

                                <h4>@Model.Artist.name</h4>
                                <h5>@Model.genre</h5>

                                <p>You will begin to realise why this exercise is called the Dickens Pattern (with reference to the ghost showing Scrooge some different futures)</p>
                                <ul class="list basic_info">
                                    <li><i class="lnr lnr-calendar-full"></i> @Model.date.ToShortDateString()</li>
                                    <li><i class="lnr lnr-tag"></i> @Model.price$</li>
                                    <li><i class="lnr lnr-user"></i>@Model.Artist.name</li>
                                </ul>
                                <iframe width="420" height="345" src="https://www.youtube.com/embed/@Model.featuredVideoUrl">
                                </iframe>
                                <ul class="list personal_social">
                                    <li><a href="https://pitchfork.com/reviews/albums/@Model.Artist.name-@Model.name/"><i class=""></i></a></li>

                                </ul>
                                <h2>
                                    Songs List
                                </h2>
                                <table style="width:100%;text-align:left">
                                    <tr>
                                        <th>Name</th>
                                        <th>Length</th>
                                    </tr>
                                  
                                        @foreach (var item in ViewBag.songs)
                                        {
                                            <tr>
                                                <td>@item.name</td>
                                                <td>@item.length</td>
                                            </tr>
                                        }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>